pkgname=libupnp-github
pkgver=1.8.1
pkgrel=1
_commit='eed7ec4aaab110beda25dbee539a1ed933b72c87'
_srcname="pupnp-${_commit}"
pkgdesc="Portable Open Source UPnP Development Kit"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://pupnp.sourceforge.net/"
license=('BSD')
depends=('glibc')
makedepends=('pkgconfig')
conflicts=('libupnp')
replaces=('libupnp')
provides=("libupnp=${pkgver}")
source=("http://github.com/mrjimenez/pupnp/archive/${_commit}.tar.gz")
md5sums=('f9460a05333bebcf994721a121041e16')

prepare() {
  cd "$srcdir/${_srcname}"
  autoreconf -vi
}

build() {
  cd "${srcdir}/${_srcname}"
  ./configure --prefix=/usr --enable-ipv6
  make
}

package() {
  cd "${srcdir}/${_srcname}"
  make DESTDIR=${pkgdir} install
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/custom/${pkgname}/LICENSE
}

