_commit=b4835f0ef67fc62607e85ee816989d9cf9f45d78
_srcname=libupnpp-${_commit}
pkgname=libupnpp
pkgver=0.14.1
pkgrel=1
pkgdesc="A C++ wrapper for libupnp - used with upmpdcli or upplay"
url="http://www.lesbonscomptes.com/upplay/downloads.html"
arch=('x86_64' 'i686' 'armv6h' 'armv7h')
license=('GPL2')
makedepends=('automake')
depends=('libupnp' 'expat' 'curl')
source=("http://github.com/medoc92/libupnpp/archive/${_commit}.tar.gz")
sha256sums=('3678ddc9abeb23ee709017687b95c2f865cfa2e0ebe5ce6098d3b416f4f67a95')

build(){
	cd "${srcdir}/${_srcname}"
	./autogen.sh
	./configure --prefix=/usr --sysconfdir=/etc
	make
}

package(){
	cd "${srcdir}/${_srcname}"
	make DESTDIR="$pkgdir" install
}
